<body class="">
	<!-- Nav tabs -->

	<%- include('./partials/nav.ejs') %>

		<section>
			<div class="row">
				<div class="col py-3" style="background-color: #fff;">
					<div class="container">
						<h2 class="display-4"><i class="fas fa-code mr-2" style="font-size: 45px;"></i>Create Problems
						</h2>
					</div>

				</div>
			</div>
			<div class="row justify-content-center">

				<div class="col-md-8 ">
					<form action="articles" method="POST" id="formProblem">
						<div class="card-body text-center">
							<h2>Please fill all data to crete problem</h2>
							<hr>
							<div class="d-md-flex d-block justify-content-between mb-3">
								<input form="formProblem" type="text" placeholder="problem name"
									class="form-control mb-md-0 mb-3 form-control-lg" type="text" id="title"
									name="title">
							</div>
							<!--As we don't have it stored in the database-->
							<!--<div class="d-md-flex d-block justify-content-between mb-3">
                                <input form="formProblem" type="text" placeholder="Problem tag (for ex: dfs,bfs...)" class="form-control mb-md-0 mb-3 form-control-lg" type="text" id="problemTag" name="problemTag">
							</div>-->

							<textarea form="formProblem" placeholder="Problem Description"
								class="form-control mb-3 form-control-lg" type="text" id="body" name="body"></textarea>

							<div class="d-md-flex d-block justify-content-between mb-3">
								<input form="formProblem" type="text" placeholder="problem input format"
									class="form-control mb-md-0 mb-3 form-control-lg" type="text"
									id="problemInputFormat" name="problemInputFormat">
							</div>
							<div class="d-md-flex d-block justify-content-between mb-3">
								<input form="formProblem" type="text" placeholder="problem output format"
									class="form-control mb-md-0 mb-3 form-control-lg" type="text"
									id="problemOutputFormat" name="problemOutputFormat">
							</div>


							<div class="d-md-flex d-block justify-content-between mb-3">
								<input form="formProblem" type="text" placeholder="problem input"
									class="form-control mb-md-0 mb-3 form-control-lg" type="text" id="problemInput"
									name="problemInput">
							</div>
							<div class="d-md-flex d-block justify-content-between mb-3">
								<input form="formProblem" type="text" placeholder="problem output"
									class="form-control mb-md-0 mb-3 form-control-lg" type="text" id="problemOutput"
									name="problemOutput">
							</div>
							<button form="formProblem" type="submit"
								class="btn btn-outline-dark btn-block">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</section>

		<!-- Scripts -->

